//   Alerts
// -----------------------------------------------------------------------------------------------
alertcondition(buy, title='*Buy Alert', message='Buy {{exchange}}:{{ticker}}')
alertcondition(sell, title='*Sell Alert', message='Sell {{exchange}}:{{ticker}}')
